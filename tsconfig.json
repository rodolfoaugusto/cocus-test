{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": ".build",
    "rootDir": "./",
  },
  "include": [
    "src/**/*.ts",
    "./__tests__/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./prisma",
    "./tools",
    "./data",
    ".build"
  ]
}
